{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"]
    },
    "lib": ["es2017", "es2016", "es2015", "dom"]
  },
  "include": ["main.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
